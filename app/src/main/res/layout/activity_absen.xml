<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F2EC"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir Presensi"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#403A34"
            android:layout_marginBottom="20dp" />

        <!-- CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="22dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- STATUS -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Kehadiran"
                    android:textStyle="bold"
                    android:textColor="#403A34"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="20dp" />

                <!-- FOTO -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foto Bukti"
                    android:textStyle="bold"
                    android:textColor="#403A34"
                    android:layout_marginBottom="10dp" />

                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="260dp"
                    android:background="@drawable/bg_image"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/ivFoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </FrameLayout>

                <!-- BUTTON KAMERA -->
                <Button
                    android:id="@+id/btnKamera"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Buka Kamera"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#7C83FD"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- BUTTON KIRIM -->
                <Button
                    android:id="@+id/btnKirim"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Kirim Absensi"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6DB38B"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
